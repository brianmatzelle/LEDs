# Garvis Voice Server - API Keys
# Copy this to .env (or ../.env) and fill in your keys

DEEPGRAM_API_KEY=
ELEVENLABS_API_KEY=

# LLM Provider: OpenClaw (default) or direct Claude
USE_OPENCLAW=true

# OpenClaw settings (when USE_OPENCLAW=true)
OPENCLAW_GATEWAY_URL=http://127.0.0.1:18789
OPENCLAW_GATEWAY_TOKEN=
